{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackagePrefixes": ["github.com/giantswarm"],
      "groupName": "giantswarm modules"
    },
    {
      "matchPackagePrefixes": ["k8s.io", "sigs.k8s.io"],
      "groupName": "k8s packages"
    },
    {
      "matchPackagePatterns": ["^(?!.*k8s.io|github.com\/giantswarm).*"],
      "groupName": "etc packages"
    }
  ]
}
